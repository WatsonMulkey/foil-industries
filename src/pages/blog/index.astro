---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts, excluding drafts
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Sort by date (newest first)
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Separate featured posts
const featuredPosts = sortedPosts.filter(post => post.data.featured);
const regularPosts = sortedPosts.filter(post => !post.data.featured);
---

<BaseLayout
  title="Blog - FOIL Engineering"
  description="Insights on design systems, product management, and building elegant tools."
>
  <main id="main-content">
    <!-- Blog Hero -->
    <section class="blog-hero section">
      <div class="container">
        <div class="section-header">
          <div class="section-eyebrow">Insights & Ideas</div>
          <h1 class="section-title">The FOIL Engineering Blog</h1>
          <p class="section-subtitle">
            Thoughts on design systems, product management, and building tools that amplify human capability.
          </p>
        </div>
      </div>
    </section>

    <!-- Featured Posts -->
    {featuredPosts.length > 0 && (
      <section class="featured-posts section">
        <div class="container">
          <h2 class="featured-label">Featured</h2>
          <div class="featured-grid">
            {featuredPosts.map((post) => (
              <article class="featured-card">
                <a href={`/blog/${post.slug}/`} class="card-link">
                  {post.data.heroImage && (
                    <div class="card-image">
                      <img src={post.data.heroImage} alt={post.data.title} />
                    </div>
                  )}
                  <div class="card-content">
                    <div class="card-meta">
                      <time datetime={post.data.pubDate.toISOString()}>
                        {post.data.pubDate.toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                        })}
                      </time>
                      {post.data.tags.length > 0 && (
                        <span class="card-tag">{post.data.tags[0]}</span>
                      )}
                    </div>
                    <h3 class="card-title">{post.data.title}</h3>
                    <p class="card-description">{post.data.description}</p>
                    <div class="card-author">By {post.data.author}</div>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- All Posts -->
    <section class="all-posts section">
      <div class="container">
        <h2 class="posts-label">All Posts</h2>
        <div class="posts-grid">
          {regularPosts.map((post) => (
            <article class="post-card">
              <a href={`/blog/${post.slug}/`} class="card-link">
                <div class="card-content">
                  <div class="card-meta">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {post.data.pubDate.toLocaleDateString('en-US', {
                        month: 'short',
                        day: 'numeric',
                        year: 'numeric'
                      })}
                    </time>
                  </div>
                  <h3 class="card-title">{post.data.title}</h3>
                  <p class="card-description">{post.data.description}</p>
                  {post.data.tags.length > 0 && (
                    <div class="card-tags">
                      {post.data.tags.map((tag) => (
                        <span class="tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
              </a>
            </article>
          ))}
        </div>

        {sortedPosts.length === 0 && (
          <div class="empty-state">
            <p>No blog posts yet. Check back soon for insights on design systems, product management, and elegant engineering.</p>
          </div>
        )}
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  /* Blog Hero */
  .blog-hero {
    padding-top: calc(90px + var(--spacing-3xl));
  }

  /* Featured Posts */
  .featured-label,
  .posts-label {
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--color-gold);
    margin-bottom: var(--spacing-lg);
  }

  .featured-grid {
    display: grid;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-3xl);
  }

  @media (min-width: 768px) {
    .featured-grid {
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    }
  }

  .featured-card {
    background: linear-gradient(135deg,
      rgba(53, 56, 61, 0.8) 0%,
      rgba(43, 46, 51, 0.9) 100%);
    border: 1px solid rgba(74, 95, 122, 0.3);
    border-radius: 8px;
    overflow: hidden;
    transition: all var(--transition-base) ease;
  }

  .featured-card:hover {
    border-color: var(--color-mustard);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .card-image {
    width: 100%;
    height: 240px;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow) ease;
  }

  .featured-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: var(--spacing-lg);
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
    font-size: 14px;
    color: var(--color-medium-grey);
  }

  .card-tag {
    padding: 4px 12px;
    background-color: rgba(212, 160, 23, 0.15);
    color: var(--color-gold);
    border-radius: 4px;
    font-weight: 600;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .card-title {
    font-size: 24px;
    margin-bottom: var(--spacing-sm);
    color: var(--color-off-white);
    line-height: 1.3;
  }

  .card-description {
    color: var(--color-light-grey);
    line-height: 1.7;
    margin-bottom: var(--spacing-sm);
  }

  .card-author {
    font-size: 14px;
    color: var(--color-medium-grey);
    font-weight: 500;
  }

  /* All Posts Grid */
  .posts-grid {
    display: grid;
    gap: var(--spacing-md);
  }

  @media (min-width: 768px) {
    .posts-grid {
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    }
  }

  .post-card {
    background: rgba(53, 56, 61, 0.6);
    border: 1px solid rgba(74, 95, 122, 0.2);
    border-radius: 6px;
    padding: var(--spacing-lg);
    transition: all var(--transition-base) ease;
  }

  .post-card:hover {
    border-color: var(--color-slate-blue);
    background: rgba(53, 56, 61, 0.8);
  }

  .post-card .card-title {
    font-size: 20px;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    margin-top: var(--spacing-sm);
  }

  .tag {
    font-size: 12px;
    padding: 4px 10px;
    background-color: rgba(74, 95, 122, 0.2);
    color: var(--color-steel-blue);
    border-radius: 3px;
    font-weight: 500;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: var(--spacing-3xl) var(--spacing-lg);
    color: var(--color-medium-grey);
  }

  .empty-state p {
    max-width: 600px;
    margin: 0 auto;
    font-size: 18px;
  }
</style>
