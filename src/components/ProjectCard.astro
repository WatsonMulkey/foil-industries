---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  href: string;
  name: string;
  description: string;
  cta?: string;
  image: ImageMetadata;
  imageAlt: string;
}

const { href, name, description, cta = 'Try it', image, imageAlt } = Astro.props;
---

<a href={href} class="project-card">
  <div class="project-screenshot">
    <Image src={image} alt={imageAlt} loading="lazy" />
  </div>
  <div class="project-info">
    <h3 class="project-name">{name}</h3>
    <p class="project-description">{description}</p>
    <span class="project-cta">{cta} &rarr;</span>
  </div>
</a>
