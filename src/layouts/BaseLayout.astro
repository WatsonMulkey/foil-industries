---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = 'FOIL Engineering - Software That Fits Your Context',
  description = 'Product consulting, process design, and bespoke software built around your constraints — team size, budget, existing systems. 10+ year product manager in Denver.',
  ogImage = '/og-image.png'
} = Astro.props;

const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site).href : Astro.url.pathname;
const ogImageURL = Astro.site ? new URL(ogImage, Astro.site).href : ogImage;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "FOIL Engineering",
      "description": "Product consulting, process design, and bespoke software built around your constraints — team size, budget, existing systems.",
      "url": "https://foil.engineering",
      "email": "watson@foil.engineering",
      "founder": {
        "@type": "Person",
        "name": "Watson Mulkey",
        "jobTitle": "Founder & Technical Product Manager"
      },
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Denver",
        "addressRegion": "CO",
        "addressCountry": "US"
      },
      "areaServed": "US",
      "knowsAbout": [
        "Bespoke software development",
        "AI-native development",
        "Product management consulting",
        "Service design",
        "Process architecture",
        "Custom internal tools",
        "MCP integrations",
        "RAG architecture",
        "Vue.js",
        "Python",
        "FastAPI"
      ],
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Services",
        "itemListElement": [
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Product Management",
              "description": "Product strategy, 0-1 product management, user research, roadmap planning, and go-to-market strategy."
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Service Design",
              "description": "Process architecture, agile transformation, AI workflow design, operational documentation, and change management."
            }
          },
          {
            "@type": "Offer",
            "itemOffered": {
              "@type": "Service",
              "name": "Bespoke Tooling",
              "description": "Custom software built for your specific context. AI-native applications, internal tools, workflow automation, agent integrations, and MVPs."
            }
          }
        ]
      }
    }
    </script>

    <!-- View Transitions -->
    <ViewTransitions />

    <!-- Global Styles -->
    <style is:global>
      @import '../styles/global.css';
    </style>
  </head>
  <body>
    <!-- Skip to main content link for accessibility -->
    <a href="#main-content" class="skip-to-main">Skip to main content</a>

    <slot />
  </body>
</html>
